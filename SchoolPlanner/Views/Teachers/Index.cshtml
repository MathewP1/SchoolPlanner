@model IEnumerable<SchoolPlanner.Models.Teacher>

@{
    ViewData["Title"] = "Teacher";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Teacher List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Create" asp-controller="Teachers" class="btn btn-info form-control text-white">Add Teacher</a>
    </div>
    <div class="col-12 border p-3">
        <table class="table table-striped table-bordered" style="width:100%">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherName)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Teachers" asp-route-id="@item.Id" class="btn btn-danger form-control text-white">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>
