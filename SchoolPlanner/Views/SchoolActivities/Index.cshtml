@model SchoolPlanner.Models.PlannerData
@{
    ViewData["Title"] = "Planner";
}

@section Styles {
    <link href="@Url.Content("~/css/tableStyle.css")" rel="stylesheet" type="text/css" />
}
@section Scripts {
