}

<div class="d-flex flex-row">
    <div class="p-2"><h2 class="text-info">Room:</h2></div>
    <div class="p-2 dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Model.currentRoom</a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            @foreach (var item in Model.Rooms)
            {
                <a class="dropdown-item">@item.RoomNumber</a>
            }
        </div>
    </div>
</div>


